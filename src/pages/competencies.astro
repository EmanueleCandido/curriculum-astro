---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Competencies"> 
    <link rel="stylesheet" href="/styles/info.css" slot="style"/>
    <main>
		<ul role="list" class="link-card-grid">
            <Card
                href="/"
                title="Back"
                body="Keep exploring"
            />
            <Card
                href="/experiences/"
                title="Work History"
                body="Find out which business I collaborated with and in which fashion"
            />
            <Card
                href="/formation/"
                title="Formation"
                body="Discover more about my formation background"
            />
        </ul>
        <ul>
            <li class="ccard">
                <article>
                    <h3><strong>BackEnd Development</strong></h3>
                    <p>ASP.NET Core, C#, Python, SQL, Database Design</p>
                </article>
            </li><br>
            <li class="ccard">
                <article>
                    <h3><strong>FrontEnd Development</strong></h3>
                    <p>JavaScript, TypeScript, Angular, HTML, CSS, Astro</p>
                </article>
            </li><br>
            <li class="ccard">
                <article>
                    <h3><strong>Software Development</strong></h3>
                    <p>Git, Docker, Bash, Linux environment</p>
                </article>
            </li><br>
            <li class="ccard">
                <article>
                    <h3><strong>Cybersecurity</strong></h3>
                    <p>Wireshark</p>
                </article>
            </li><br>
            <li class="ccard">
                <article>
                    <h3><strong>Other</strong></h3>
                    <p>C++, GraphQL</p>
                </article>
            </li><br>
            <li class="ccard">
                <article>
                    <h3><strong class="astro-gradient">Future Projects</strong></h3>
                    <p>React, Rust, Kubernetes</p>
                </article>
            </li><br>
        </ul>
    </main>
</Layout>

<style>
	.astro-gradient {
		background-image: linear-gradient(0deg, #4f39fa, #da62c4);
	}
</style>